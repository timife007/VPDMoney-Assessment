<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:layout_width="48dp"
            android:id="@+id/transaction_icon"
            android:layout_height="48dp"
            android:contentDescription="@string/transaction_item_icon"
            android:src="@drawable/ic_sent"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_gravity="start"
            android:gravity="start"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:id="@+id/transaction_history_detail"
                android:text="@string/sent_to_john_oluwafemi"
                android:textSize="11sp"
                android:gravity="start|center"
                android:layout_gravity="start"
                android:theme="@style/General.Text.Style"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="11sp"
                android:id="@+id/transaction_date"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginBottom="5dp"
                android:layout_gravity="bottom"
                android:text="@string/_2_20_22"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/money_involved"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="top"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/navy_blue"
                android:text="@string/_65000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/history_time"
                android:gravity="bottom"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textSize="10sp"
                android:text="@string/_7_35pm"/>
        </LinearLayout>



    </LinearLayout>
